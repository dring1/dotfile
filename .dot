#!/bin/bash

set -x

# remove workspace swap
defaults write com.apple.dock workspaces-auto-swoosh -bool NO && killall Dock

# enable char repeat
defaults write NSGlobalDomain ApplePressAndHoldEnabled -bool false

# screenshot dir
mkdir -p ${HOME}/Screenshots
defaults write com.apple.screencapture location ${HOME}/Screenshots/ && killall SystemUIServer

# install homebrew
/usr/bin/ruby -e "$(curl -fsSL https://raw.githubusercontent.com/Homebrew/install/master/install)"

brew tap caskroom/cask

# quick lookup plugins
brew cask install \
	qlcolorcode \
	qlstephen \
	qlmarkdown \
	quicklook-json \
	qlprettypatch \
	quicklook-csv \
	betterzipql \
	webpquicklook \
	suspicious-package \
	alfred \
	appcleaner \
	caffeine \
	cheatsheet \
	docker \
	dropbox \
	google-chrome \
	spectacle \
	1password \
	transmission \
	valentina-studio \
	vlc \
	iterm2 \
	visual-studio-code \
	spotify \
	haptickey \
	zoomus

brew install \
	tree \
	fzf \
	ack \
	git \
    golang \
	node \
	shellcheck \
	imagemagick \
	yarn \
	watchman \
	awscli \
	kubernetes-cli \
	protobuf

echo "export PATH=/usr/local/bin:${PATH}" >>"${HOME}"/.zshrc

# iterm2 shell integration
curl -L https://iterm2.com/misc/install_shell_integration.sh | bash

# fonts
brew tap caskroom/fonts && brew cask install font-source-code-pro

# install oh my zsh
brew install zsh zsh-completions

sh -c "$(curl -fsSL https://raw.githubusercontent.com/robbyrussell/oh-my-zsh/master/tools/install.sh)"

echo "plugins=(git colored-man colorize pip python brew osx zsh-syntax-highlighting)" >>"${HOME}/.zshrc"

source "${HOME}/.zshrc"

curl https://raw.githubusercontent.com/github/gitignore/master/Global/macOS.gitignore -o ~/.gitignore

# go setup
mkdir -p "${HOME}"/Code
echo "export GOPATH=$HOME/Code/go" >>"${HOME}"/.zshrc
echo "export GOROOT=/usr/local/opt/go/libexec" >>"${HOME}"/.zshrc
echo "export PATH=$PATH:${GOPATH}/bin" >>"${HOME}"/.zshrc
echo "export PATH=$PATH:$GOROOT/bin" >>"${HOME}"/.zshrc
echo "export PATH=$PATH:${GOPATH}/bin:${GOROOT}/bin" >>~/.zshrc

source ${HOME}/.zshrc

mkdir -p ${GOPATH} ${GOPATH}/src ${GOPATH}/pkg ${GOPATH}/bin

# GET the vscode keybindings
# clone vscode settings

# Set up react
npm install -g react-native-cli eslint

# installing go packages
go get -u google.golang.org/grpc
go get -u github.com/golang/protobuf/protoc-gen-go
go get -u github.com/derekparker/delve/cmd/dlv
go get -u mvdan.cc/sh/cmd/shfmt
